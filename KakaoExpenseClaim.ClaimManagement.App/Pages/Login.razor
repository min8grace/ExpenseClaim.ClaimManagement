@page "/login"

<div class="mt-5 row">
    <div class="card col-12 col-lg-6 mr-auto ml-auto p-3">
        <h3 class="card-title">Login to GloboTicket</h3>
        <div class="card-body">
            <EditForm Model="@LoginViewModel" OnValidSubmit="HandleValidSubmit">
                <div class="input-group row mt-2">
                    <label class="col-12 col-md-4 p-0" for="userName">Email:</label>
                    <InputText id="userName" class="col-12 col-md-8 login-field" @bind-Value="LoginViewModel.Email"></InputText>
                </div>
                <div class="input-group row mt-2">
                    <label class="col-12 col-md-4 p-0" for="password">Password:</label>
                    <InputText type="password" id="password" class="col-12 col-md-8 login-field" @bind-Value="@LoginViewModel.Password"></InputText>
                </div>
                <div class="input-group row mt-2">
                    <div class="offset-md-4">
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" DisableElevation="true" Color="Color.Tertiary">Login</MudButton>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<span class="label label-error">@Message</span>

<div class=" col-12 col-lg-6 mr-auto ml-auto p-3">
    <MudExpansionPanels>
        <MudExpansionPanel Text="ID / PW" MaxHeight="1000">
            <h5>            EmployeeA   - Id: EmployeeA@ABC.com</h5>
            <h5>            EmployeeB   - Id: EmployeeB@ABC.com</h5>
            <h5>            Approver    - Id: Approver@ABC.com</h5>
            <h5>            Finance Dept - Id: FinanceDep@ABC.com</h5>
            <br/>
            <h5>            #Pw: Abcd&01?</h5>
        </MudExpansionPanel>
    </MudExpansionPanels>
</div>

